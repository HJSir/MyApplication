<?xml version="1.0" encoding="utf-8"?>
<com.xiuxiu.util.PercentLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                     xmlns:tools="http://schemas.android.com/tools"
                                     android:layout_width="match_parent"
                                     android:layout_height="match_parent"
                                     xmlns:app="http://schemas.android.com/apk/res-auto"
                                     android:orientation="horizontal"
                                     android:background="#ffefebe7"
    >

    <com.xiuxiu.util.PercentLinearLayout

        android:layout_marginTop="3dp"

        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_widthPercent="25%"
        android:orientation="vertical"
        android:id="@+id/button_1"
        tools:context="com.xiuxiu.fragment.MineFragment">
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_heightPercent="70%"
            android:src="@mipmap/home_1"
            android:id="@+id/image_home"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_heightPercent="30%"
            android:text="首页"
            android:gravity="center"

            />

    </com.xiuxiu.util.PercentLinearLayout>

    <com.xiuxiu.util.PercentLinearLayout
        android:layout_marginTop="4dp"


        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/button_2"
        android:orientation="vertical"
        app:layout_widthPercent="25%"
        tools:context="com.xiuxiu.fragment.MineFragment">
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@mipmap/near_2"
            app:layout_heightPercent="70%"
            android:id="@+id/image_near"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_heightPercent="30%"
            android:text=" 附近"
            android:gravity="center"

            />
    </com.xiuxiu.util.PercentLinearLayout>


    <com.xiuxiu.util.PercentLinearLayout
        android:layout_marginTop="2dp"

        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_widthPercent="25%"
        android:orientation="vertical"
        android:id="@+id/button_3"
        tools:context="com.xiuxiu.fragment.MineFragment">
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@mipmap/chat_2"
            app:layout_heightPercent="70%"
            android:id="@+id/image_chat"

            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_heightPercent="30%"
            android:text="消息  "
            android:gravity="center"

            />
    </com.xiuxiu.util.PercentLinearLayout>


    <com.xiuxiu.util.PercentLinearLayout

        android:layout_marginTop="3dp"

        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_widthPercent="25%"
        android:orientation="vertical"
        android:id="@+id/button_4"
        >
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@mipmap/mine_2"
            android:id="@+id/image_mine"
            app:layout_heightPercent="70%"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_heightPercent="30%"
            android:text="  我的"
            android:gravity="center"

            />
    </com.xiuxiu.util.PercentLinearLayout>



</com.xiuxiu.util.PercentLinearLayout>