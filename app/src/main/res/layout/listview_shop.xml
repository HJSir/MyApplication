<?xml version="1.0" encoding="utf-8"?>
<com.xiuxiu.util.PercentLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                     xmlns:app="http://schemas.android.com/apk/res-auto"
                                     android:orientation="horizontal"
                                     android:layout_width="match_parent"
                                     android:background="#EFEFEF"
                                     android:paddingBottom="5dp"
                                     app:layout_heightPercent="50%"
                                     android:layout_height="100dp">
    <com.facebook.drawee.view.SimpleDraweeView
        android:id="@+id/image_shop"
        android:layout_height="90dp"
        android:layout_width="100dp"
        android:layout_margin="5dp"
     />

    <com.xiuxiu.util.PercentLinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"

        android:layout_height="match_parent">

        <com.xiuxiu.util.PercentLinearLayout

            android:layout_width="match_parent"
            android:layout_height="33dp"
            android:orientation="horizontal"
            android:layout_marginTop="10dp"
         >
            <TextView


                android:text="皇家修理厂"
                android:textStyle="bold"

                android:id="@+id/name_shop"
                android:layout_width="200dp"
                android:layout_height="20dp"/>


            <TextView

                android:layout_gravity="right"
                android:text="987m"
                android:textStyle="bold"
                android:id="@+id/distance_shop"
                android:layout_width="40dp"
                android:layout_height="20dp"/>


        </com.xiuxiu.util.PercentLinearLayout>


        <com.xiuxiu.util.PercentLinearLayout

            android:layout_width="match_parent"
            android:layout_height="33dp"
            android:orientation="horizontal"
            android:layout_marginTop="5dp">
        <TextView
            android:text="店铺信用"
            android:textStyle="bold"
            android:id="@+id/credit_shop"
            android:layout_width="60dp"
            android:layout_height="20dp"/>
            <ImageView
                android:background="@mipmap/star_1"
                android:layout_width="20dp"
                android:layout_height="20dp"/>
            <ImageView
                android:background="@mipmap/star_1"
                android:layout_width="20dp"
                android:layout_height="20dp"/>
            <ImageView
                android:background="@mipmap/star_1"
                android:layout_width="20dp"
                android:layout_height="20dp"/>
            <ImageView
                android:background="@mipmap/star_1"
                android:layout_width="20dp"
                android:layout_height="20dp"/>
            <ImageView
                android:background="@mipmap/star_1"
                android:layout_width="20dp"
                android:layout_height="20dp"/>
        </com.xiuxiu.util.PercentLinearLayout>
        <com.xiuxiu.util.PercentLinearLayout

            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <com.xiuxiu.util.PercentLinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:layout_weight="1">
                <TextView
                    android:text="月交易："
                    android:textStyle="bold"
                    android:layout_width="60dp"
                    android:layout_height="20dp"/>
                <TextView
                    android:text="50"
                    android:gravity="right"
                    android:textStyle="bold"
                    android:id="@+id/trade_shop"
                    android:layout_width="30dp"
                    android:layout_height="20dp"/>
                <TextView
                    android:gravity="left"
                    android:text="笔"
                    android:textStyle="bold"
                    android:layout_width="20dp"
                    android:layout_height="20dp"/>

            </com.xiuxiu.util.PercentLinearLayout>
            </com.xiuxiu.util.PercentLinearLayout>

    </com.xiuxiu.util.PercentLinearLayout>

</com.xiuxiu.util.PercentLinearLayout>